pipeline {
    agent { label 'work_station'}

    stages
    {
        stage ('git clone')
        {
            steps
            {
            sh 'hostname'
            git branch: 'main', url: 'https://github.com/ChaitanyaChandra/ansible-lab.git'
            dir('ansible-lab') {
            }
            }
         }

        stage ('ansible ping')
        {
            steps
            {
            sh 'ansible -m ping all -i roboshop.inv'
            }
        }
    }
}
