pipeline {
    agent { label 'work_station'}
    options {
        disableConcurrentBuilds()
        ansiColor('xterm')
    }
    environment {
        // Creates variables KEY=/temp/path/to/key, KEY_USR=joe
        KEY = credentials('ec2_private_key')
    }
    stages
    {
        stage ('git clone')
        {
            steps
            {
            sh 'hostname'
            git branch: 'main', url: 'https://github.com/ChaitanyaChandra/ansible-lab.git'
            dir('ansible-lab') {
            }
            }
         }

        stage ('ansible ping')
        {
            steps
            {
            sh 'ansible -m ping all -i roboshop.inv'
            sh 'echo ${KEY} | base64'
            }
        }
    }
}
