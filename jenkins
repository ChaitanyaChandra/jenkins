pipeline {
    agent { label 'work_station'}
    options {
        disableConcurrentBuilds()
        ansiColor('xterm')
    }
    triggers { pollSCM('* * * * *') }
    stages
    {
        stage ('git clone')
        {
            steps
            {
            sh 'hostname'
            git branch: 'main', url: 'https://github.com/ChaitanyaChandra/ansible-lab.git'
            dir('ansible-lab') {
            }
            }
         }

        stage ('dynamic inv setup')
        {
            steps
            {
            sh 'python3 -m pip install boto3'
            sh 'python3 inv.py'
            }
        }

        stage ('parallel stage')
        {
        parallel {
            stage ('ansible version')
            {
            steps
                {
                sh 'ansible --version'
                }
            }
            stage ('ansible ping')
            {
            steps
                {
                sh 'ansible -m ping all -i roboshop.inv'
                }
            }
        }
        }
    }
}
